<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.SettingsActivity">

    <ImageView
        android:id="@+id/supportandfeedback"
        android:layout_width="341dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/appshare"
        app:layout_constraintStart_toStartOf="@+id/appshare"
        app:layout_constraintTop_toBottomOf="@+id/appshare"
        app:srcCompat="@drawable/button_background" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="604dp"
        android:layout_height="244dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/auth_screens_background" />

    <FrameLayout
        android:id="@+id/user_image_setting"
        android:layout_width="@dimen/profile_user_image_size"
        android:layout_height="@dimen/profile_user_image_size"
        android:layout_marginTop="170dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/usersetting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/profile_user_photo_margin"
            android:background="@color/colorLightGrey"
            android:scaleType="fitXY"
            android:src="@drawable/ic_user_placeholder" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/user_image_background" />

    </FrameLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/edit"
        android:layout_width="88dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Edit"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/user_image_setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/user_image_setting"
        app:layout_constraintTop_toTopOf="@+id/user_image_setting"
        app:layout_constraintVertical_bias="0.82" />

    <TextView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee_inline"
        android:text="Settings"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/user_image_setting"
        app:layout_constraintEnd_toEndOf="@+id/user_image_setting"
        app:layout_constraintStart_toStartOf="@+id/user_image_setting"
        app:layout_constraintTop_toTopOf="@+id/imageView11"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/backsettings"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/settings"
        app:layout_constraintEnd_toStartOf="@+id/settings"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/settings"
        app:srcCompat="@drawable/ic_back" />

    <TextView
        android:id="@+id/namesetting"
        android:layout_width="164dp"
        android:layout_height="43dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/bungee_inline"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/user_image_setting"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="@+id/user_image_setting"
        app:layout_constraintTop_toBottomOf="@+id/user_image_setting"
        tools:text="Sajal Kaushal" />

    <LinearLayout
        android:id="@+id/addresses"
        android:layout_width="341dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/user_image_background"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/user_image_setting"
        app:layout_constraintStart_toStartOf="@+id/user_image_setting"
        app:layout_constraintTop_toBottomOf="@+id/namesetting">

        <TextView
            android:layout_width="299dp"
            android:layout_height="30dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/bungee"
            android:hint="  Addresses"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/forwardsetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24" />

    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logout"
        android:layout_width="250dp"
        android:layout_height="52dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/bungee"
        android:text="LOGOUT"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/supportandfeedback"
        app:layout_constraintStart_toStartOf="@+id/supportandfeedback"
        app:layout_constraintTop_toBottomOf="@+id/supportandfeedback" />

    <ImageView
        android:id="@+id/appshare"
        android:layout_width="341dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/addresses"
        app:layout_constraintStart_toStartOf="@+id/addresses"
        app:layout_constraintTop_toBottomOf="@+id/addresses"
        app:srcCompat="@drawable/button_background" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/appshare"
        app:layout_constraintStart_toStartOf="@+id/appshare"
        app:layout_constraintTop_toTopOf="@+id/appshare"
        app:srcCompat="@drawable/ic_group" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/bungee"
        android:text="Tell a friend about our App"
        android:textColor="#FBE9E7"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/bungee"
        android:text="Support &amp; Feedback"
        android:textColor="#FBE9E7"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView10"
        app:layout_constraintStart_toEndOf="@+id/imageView10"
        app:layout_constraintTop_toTopOf="@+id/imageView10" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="@+id/appshare"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toTopOf="@+id/textView9"
        app:srcCompat="@drawable/ic_forwardwhite" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="@+id/supportandfeedback"
        app:layout_constraintHorizontal_bias="0.851"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="@+id/textView10"
        app:srcCompat="@drawable/ic_forwardwhite" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/supportandfeedback"
        app:layout_constraintStart_toStartOf="@+id/supportandfeedback"
        app:layout_constraintTop_toTopOf="@+id/supportandfeedback"
        app:srcCompat="@drawable/ic_baseline_support_agent_24" />


</androidx.constraintlayout.widget.ConstraintLayout>